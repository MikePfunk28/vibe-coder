{
  "name": "ai-ide",
  "version": "1.0.0",
  "description": "Advanced AI-Powered Development Environment - Competitor to VSCode, GitHub Copilot, Cursor, and Windsurf",
  "main": "electron/main.js",
  "author": "AI IDE Team",
  "license": "MIT",
  "homepage": "https://github.com/your-username/ai-ide",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ai-ide.git"
  },
  "keywords": [
    "ai",
    "ide",
    "development",
    "vscode",
    "copilot",
    "cursor",
    "windsurf",
    "electron",
    "typescript",
    "python"
  ],
  "scripts": {
    "build": "node scripts/build-electron.js",
    "build:all": "node scripts/build-electron.js --all-platforms",
    "package": "node scripts/package-final.js",
    "dev": "npm run build && electron electron/",
    "test": "npm run test:backend && npm run test:extension",
    "test:backend": "cd backend && python -m pytest",
    "test:extension": "cd extensions/ai-assistant && npm test",
    "install:all": "npm install && cd extensions/ai-assistant && npm install && cd ../../backend && pip install -r requirements.txt",
    "clean": "rimraf dist releases electron/node_modules",
    "lint": "eslint scripts/ extensions/ai-assistant/src/",
    "format": "prettier --write scripts/ extensions/ai-assistant/src/"
  },
  "devDependencies": {
    "archiver": "^6.0.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "node-pty": "^1.0.0"
  },
  "build": {
    "appId": "dev.ai-ide.app",
    "productName": "AI IDE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "!electron/node_modules"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": ["**/*", "!**/__pycache__", "!**/venv", "!**/node_modules"]
      },
      {
        "from": "extensions/ai-assistant/out",
        "to": "extensions/ai-assistant"
      }
    ],
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64", "arm64"] },
        { "target": "portable", "arch": ["x64", "arm64"] }
      ],
      "icon": "electron/assets/icon.ico"
    },
    "mac": {
      "target": [
        { "target": "dmg", "arch": ["x64", "arm64"] },
        { "target": "zip", "arch": ["x64", "arm64"] }
      ],
      "icon": "electron/assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64", "arm64"] },
        { "target": "deb", "arch": ["x64", "arm64"] },
        { "target": "rpm", "arch": ["x64", "arm64"] }
      ],
      "icon": "electron/assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI IDE"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}